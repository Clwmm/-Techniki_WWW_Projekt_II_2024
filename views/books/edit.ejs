                id="input-value" placeholder="New Value" />

            <!-- Button -->
            <button class="bg-purple-500 text-white rounded px-4 py-1 hover:bg-purple-600 focus:outline-none"
                onclick="changeValue()">
                Change
            </button>
        </div>
</section>